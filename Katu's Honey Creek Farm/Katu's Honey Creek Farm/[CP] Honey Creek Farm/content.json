{
	"Format":"2.3.0",
	"ConfigSchema": { 
	//Config Options
		"starter_gifts": { 
			"AllowValues": "Farmer, Forager, Florist, Fisher, Rancher",
			"Default": "Farmer",
			"Description": "Choose what starter gifts you'll receive as a new arrival!"
		},
		"daily_blessings": {
			"AllowValues": "On, Off",
			"Default": "On",
			"Description": "If turned on, this option will allow the seasonal deity altar to give you a blessing each day when interacted with."
		},
		"gift_level":{
			"AllowValues": "Regular, Overpowered, Challenge",
			"Default": "Regular",
			"Description": "Affects starting gifts. If you choose Overpowered, you will receive a better starter gift to help you skip early game. Choose Regular for a normal run, or Challenge for a harder run."
		},
		"misc_deco":{
			"AllowValues": "On, Off",
			"Default": "On",
			"Description": "Enables or disables decorative elements such as the doghouse, fountain, etc."
		},
		"gazebo":{
			"AllowValues": "On, Off",
			"Default": "Off",
			"Description": "Enables or disables the large gazebo in the south center area."
		},
		"extra_foliage":{
			"AllowValues": "On, Off",
			"Default": "On",
			"Description": "Enables or disables small decorative foliage in accessible areas of the farm."
		},
		"big_foliage":{
			"AllowValues": "On, Off",
			"Default": "On",
			"Description": "Enables or disables large foliage deco like fallen logs and decorative trees."
		},
		"duck_pond":{
			"AllowValues": "On, Off",
			"Default": "On",
			"Description": "Enables or disables the duck pond in the center of the map."
		},
		"giant_tree":{
			"AllowValues": "On, Off",
			"Default": "On",
			"Description": "Enables or disables the giant tree in the center of the map."
		},
		"warp_pads":{
			"AllowValues": "On, Off",
			"Default": "On",
			"Description": "Enables or disables the warps across the farm."
		}
	},
	"Changes":[
		//Include files
		{
            "Action": "Include",
            "FromFile": "data/fishing.json, data/startergifts.json, data/minecarts.json, data/eastereggs.json"
        },
		//Add the farm
		{

			"Action":"EditData",
			"Target":"Data/AdditionalFarms",
			"Entries":{
				"Katu.HoneyCreekFarm/HoneyCreekFarm":{
					"ID":"Katu.HoneyCreekFarm/HoneyCreekFarm",
					"TooltipStringPath":"Strings/UI:Katu_HoneyCreekFarm",
					"MapName":"Katu_HoneyCreekFarm",
					"IconTexture":"Mods/Katu.HoneyCreekFarm/Assets/FarmIcon"
				}
			}
		},
		//Edit Farm Description
        {
            "Action":"EditData",
            "Target":"Strings/UI",
            "Entries":{
                "Katu_HoneyCreekFarm":"{{i18n:ui.farm.name}}_{{i18n:ui.farm.desc}}"
            }
        },
		//Load Farm icon
		{
			"Action":"Load",
			"Target":"Mods/Katu.HoneyCreekFarm/Assets/FarmIcon",
			"FromFile":"assets/FarmIcon.png"
		},
		//Load the main farm map
		{
			"Action":"Load",
			"Target":"Maps/Katu_HoneyCreekFarm",
			"FromFile":"assets/Farm_HoneyCreek.tmx"
		},
		//Load the Secret Woods teleport edit map
		{
			"Action":"Load",
			"Target":"Maps/{{ModId}}_Woods_Edit",
			"FromFile":"assets/Woods_HoneyCreek_Edit.tmx"
		},
		//Load the secondary Treehouse map
		{
			"Action":"Load",
			"Target":"Maps/{{ModId}}_TreeHouse",
			"FromFile":"assets/HeyKatu_HoneyCreek_TreeHouse.tmx"
		},
		//Load the secondary Tower map
		{
			"Action":"Load",
			"Target":"Maps/{{ModId}}_Tower",
			"FromFile":"assets/HeyKatu_HoneyCreek_Tower.tmx"
		},
		//Load the secondary Cave map
		{
			"Action":"Load",
			"Target":"Maps/{{ModId}}_Cave",
			"FromFile":"assets/HeyKatu_HoneyCreek_Cave.tmx"
		},
		//Actually edit the Secret Woods to include the teleport
		{
			"Action": "EditMap",
			"Target": "Maps/Woods",
			"When": {
				"HasMod |contains=FlashShifter.StardewValleyExpandedCP": false
			},
			"FromFile": "assets/Woods_HoneyCreek_Edit.tmx",
			"FromArea": {
			  "X": 0,
			  "Y": 0,
			  "Width": 4,
			  "Height": 4
			},
			"ToArea": {
			  "X": 49,
			  "Y": 24,
			  "Width": 4,
			  "Height": 4
			},
			"PatchMode": "Overlay"
		},
		//Edit the Secret Woods Differently if SVE is installed
		{
			"Action": "EditMap",
			"Target": "Maps/Woods",
			"When": {
				"HasMod |contains=FlashShifter.StardewValleyExpandedCP": true
			},
			"FromFile": "assets/Woods_HoneyCreek_Edit.tmx",
			"FromArea": {
				"X": 0,
				"Y": 0,
				"Width": 4,
				"Height": 4
			},
			"ToArea": {
				"X": 60,
				"Y": 56,
				"Width": 4,
				"Height": 4
			},
			"PatchMode": "Overlay"
		},
		//Doghouse and other Deco
		{
			"Action": "EditMap",
			"Target": "Maps/Katu_HoneyCreekFarm",
			"When": {"misc_deco": "On"},
			"FromFile": "assets/HoneyCreek_Decoration.tmx",
			"PatchMode": "Overlay"
		},
		//Gazebo
		{
			"Action": "EditMap",
			"Target": "Maps/Katu_HoneyCreekFarm",
			"When": {"gazebo": "On"},
			"FromFile": "assets/HeyKatu_Gazebo.tmx",
			"ToArea": {
			  "X": 59,
			  "Y": 73,
			  "Width": 10,
			  "Height": 12
			},
			"PatchMode": "Overlay"
		},
		//Small Foliage
		{
			"Action": "EditMap",
			"Target": "Maps/Katu_HoneyCreekFarm",
			"When": {"extra_foliage": "On"},
			"FromFile": "assets/HoneyCreek_Foliage.tmx",
			"PatchMode": "Overlay"
		},
		//Big Foliage
		{
			"Action": "EditMap",
			"Target": "Maps/Katu_HoneyCreekFarm",
			"When": {"big_foliage": "On"},
			"FromFile": "assets/HoneyCreek_BigFoliage.tmx",
			"PatchMode": "Overlay"
		},
		//Giant Tree
		{
			"Action": "EditMap",
			"Target": "Maps/Katu_HoneyCreekFarm",
			"When": {"giant_tree": "On"},
			"FromFile": "assets/HoneyCreek_GiantTree.tmx",
			"PatchMode": "Overlay"
		},
		//Duck Pond
		{
			"Action": "EditMap",
			"Target": "Maps/Katu_HoneyCreekFarm",
			"When": {"duck_pond": "Off"},
			"FromFile": "assets/HoneyCreek_NoPond.tmx",
			"ToArea": {
			  "X": 101,
			  "Y": 56,
			  "Width": 16,
			  "Height": 15
			}
		},
		//Warp Pads
		{
			"Action": "EditMap",
			"Target": "Maps/Katu_HoneyCreekFarm",
			"When": {"warp_pads": "On"},
			"FromFile": "assets/HoneyCreek_Warps.tmx",
			"PatchMode": "Overlay"
		},
		//Add SVE Support
		{		
			"Action":"EditData",
			"When": {
				"HasMod |contains=FlashShifter.StardewValleyExpandedCP": true
			},
			"Target":"Data/Minecarts",
			"TargetField": ["HoneyCreek_Warps", "Destinations", "HCSecretWoods"],
			"Entries":{
						"TargetTile":{
							"X": 60,
							"Y": 56
						}
				}
		}
	]
}